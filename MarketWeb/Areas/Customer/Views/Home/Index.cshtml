@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form method="get" asp-action="List" asp-controller="Product">
    <div class="input-group">
        <input class="form-control" asp-for="SearchQuery" style="width: 800px;">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>

<h2>Products of the week</h2>
<h4>Our weekly selection - just for you!</h4>

<div class="row">

    @foreach (var product in Model.ProductsOfTheWeak)
    {
        <partial name="_ProductCard" model="product" />
    }

</div>