@model ProductDetailViewModel


<div class="thumbnail">
    <img alt="@Model.Product.Name" src="~/images/@Model.Product.Image" asp-append-version="true">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Product.Price</h3>
        <h3>
            <a href="#">@Model.Product.Name</a>
        </h3>
        <h4>@Model.Product.Description</h4>
        <p class="button">
            <a class="btn btn-primary" asp-area="Customer" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-productId="@Model.Product.Id">Add to cart</a>
        </p>
    </div>
</div>
