@model IEnumerable<Category>

<li class="dropdown">
    <a asp-area="Customer" asp-controller="Product"
       asp-action="List"
       class="dropdown-toggle" data-toggle="dropdown">Products<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Product" asp-action="List"
                   asp-route-category="@category.Name">@category.Name</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-area="Customer" asp-controller="Product" asp-action="List" asp-route-Category="">View all products</a>
        </li>
    </ul>
</li>