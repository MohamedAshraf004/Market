@model Product


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="~/images/@Model.Image" style="width:220px;height:200px;" alt="@Model.Name" asp-append-version="true">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-area="Customer" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCarts"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.Id">Add to cart</a>
            </p>
        </div>
    </div>
</div>